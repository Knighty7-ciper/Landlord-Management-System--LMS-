# Frontend Environment Configuration
# Copy this file to .env and update the values according to your environment

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API Gateway URL - Update this to match your API Gateway deployment
VITE_API_BASE_URL=http://localhost:8080/api/v1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application name and branding
VITE_APP_NAME=Landlord Pro
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
VITE_NODE_ENV=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features for development
VITE_ENABLE_MFA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Google Maps API (for property locations)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# AWS S3 (for image uploads)
VITE_AWS_REGION=us-east-1
VITE_AWS_BUCKET_NAME=your_bucket_name

# Stripe (for payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_here

# SendGrid (for emails)
VITE_SENDGRID_API_KEY=your_sendgrid_api_key_here

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry (error tracking)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Google Analytics
VITE_GA_TRACKING_ID=your_ga_tracking_id_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode
VITE_DEBUG_MODE=true

# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# Mock API responses for development
VITE_USE_MOCK_API=false

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Base URL for production builds
VITE_BASE_URL=/

# Enable source maps in production (for debugging)
VITE_ENABLE_SOURCE_MAPS=false

# =============================================================================
# SECURITY
# =============================================================================
# Content Security Policy
VITE_CSP_ENABLED=true

# Enable HTTPS enforcement
VITE_FORCE_HTTPS=false