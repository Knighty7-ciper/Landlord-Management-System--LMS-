# Environment Configuration for Auth Service
# Copy this file to .env and update with your actual values

# Application Configuration
NODE_ENV=development
APP_NAME=Landlord Management System Auth Service
APP_VERSION=1.0.0
APP_PORT=8080

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=landlord_db
DATABASE_USER=landlord
DATABASE_PASSWORD=password123
DATABASE_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password123
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Email Configuration (SMTP)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@landlord-system.com
EMAIL_FROM_NAME=Landlord Management System

# Email Service (SendGrid alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# Logging Configuration
LOG_LEVEL=info

# MFA Configuration
MFA_CODE_LENGTH=6
MFA_CODE_EXPIRY=300

# Rate Limiting for Auth Endpoints
AUTH_RATE_LIMIT_WINDOW=900
AUTH_RATE_LIMIT_MAX=5

# Session Configuration
SESSION_SECRET=your-session-secret-key

# File Upload Configuration
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# API Configuration
API_VERSION=v1
API_TIMEOUT=30000

# Development/Testing Configuration
MOCK_EMAIL=false
MOCK_SMS=false
ENABLE_CORS=true

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DATABASE_SSL=true
# SMTP_SECURE=true
# LOG_LEVEL=warn
# ENABLE_CORS=false

# Security Headers
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true